<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment"
    android:orientation="vertical"
    android:paddingHorizontal="25dp">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/eloquia_bold"
        android:text="@string/title_settings"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_generali"
        android:textSize="25sp"
        android:fontFamily="@font/eloquia_bold"
        android:textColor="@color/disabled"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eloquia_light"
            android:text="@string/setting_peso"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/pesoInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/setting_hint_peso"
            android:maxLength="5"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:importantForAutofill="no" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eloquia_light"
            android:text="@string/setting_tema"
            android:textSize="17sp" />
        <Spinner
            android:id="@+id/temaSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center|start"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/eloquia_light"
                android:text="@string/setting_mac"
                android:textSize="17sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/switch_mac"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <EditText
                android:id="@+id/mac_1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="2"
                android:textAlignment="center"
                android:importantForAutofill="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginHorizontal="5dp"
                android:text="@string/divider_mac"
                />
            <EditText
                android:id="@+id/mac_2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="2"
                android:textAlignment="center"
                android:importantForAutofill="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginHorizontal="5dp"
                android:text="@string/divider_mac"
                />
            <EditText
                android:id="@+id/mac_3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="2"
                android:textAlignment="center"
                android:importantForAutofill="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginHorizontal="5dp"
                android:text="@string/divider_mac"
                />
            <EditText
                android:id="@+id/mac_4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="2"
                android:textAlignment="center"
                android:importantForAutofill="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginHorizontal="5dp"
                android:text="@string/divider_mac"
                />
            <EditText
                android:id="@+id/mac_5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="2"
                android:textAlignment="center"
                android:importantForAutofill="no"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginHorizontal="5dp"
                android:text="@string/divider_mac"
                />
            <EditText
                android:id="@+id/mac_6"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="2"
                android:textAlignment="center"
                android:importantForAutofill="no"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_unit_di_misura"
        android:textSize="25sp"
        android:fontFamily="@font/eloquia_bold"
        android:textColor="@color/disabled"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center|start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eloquia_light"
            android:text="@string/setting_calorie"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/calorieSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center|start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eloquia_light"
            android:text="@string/setting_velocita"
            android:textSize="17sp" />
        <Spinner
            android:id="@+id/velocitaSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textEnd" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center|start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eloquia_light"
            android:text="@string/setting_distanza"
            android:textSize="17sp" />
        <Spinner
            android:id="@+id/distanzaSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textEnd" />
    </LinearLayout>
</LinearLayout>